# Environment Variables Example
# Copy this file to .env.local for local development
# Note: Public variables must be prefixed with PUBLIC_ in SvelteKit

# =============================================================================
# Public Environment Variables (accessible in browser)
# =============================================================================

# Site Configuration
# PUBLIC_SITE_URL=https://dute.dev
# PUBLIC_SITE_NAME="Josemy Duarte Portfolio"
# PUBLIC_SITE_DESCRIPTION="Software Engineer Portfolio"

# Analytics (if needed in the future)
# PUBLIC_GOOGLE_ANALYTICS_ID=
# PUBLIC_PLAUSIBLE_DOMAIN=

# Feature Flags
# PUBLIC_ENABLE_ANALYTICS=false
# PUBLIC_ENABLE_CONTACT_FORM=false

# API Endpoints (if needed in the future)
# PUBLIC_API_URL=
# PUBLIC_CONTACT_API_URL=

# =============================================================================
# Private Environment Variables (server-side only)
# =============================================================================

# Email Service (if contact form is added)
# SENDGRID_API_KEY=
# CONTACT_EMAIL=josemy.duarte@gmail.com

# CMS/Content (if dynamic content is added)
# CONTENTFUL_SPACE_ID=
# CONTENTFUL_ACCESS_TOKEN=

# Database (if backend is added)
# DATABASE_URL=

# =============================================================================
# Build Configuration
# =============================================================================

# Node Environment
# NODE_ENV=development

# Build Options
# VITE_BUILD_SOURCEMAP=false

# =============================================================================
# Cloudflare Pages Configuration
# =============================================================================
# These are typically set in the Cloudflare Pages dashboard
# CF_PAGES_BRANCH=main
# CF_PAGES_COMMIT_SHA=
# CF_PAGES_URL=

# =============================================================================
# Development Settings
# =============================================================================

# Port (defaults to 5173)
# PORT=5173

# Host
# HOST=localhost
